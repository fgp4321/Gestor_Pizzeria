    .btn-container {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .btn-details,
    .btn-add-to-cart {
      flex: 1;
      padding: 3px;
      border: 1px solid #007bff;
      border-radius: 5px;
      background-color: #007bff;
      color: #fff;
      text-align: center;
      text-decoration: none;
      margin-right: 5px;
      transition: background-color 0.3s ease-in-out;
    }

    .btn-add-to-cart:hover {
